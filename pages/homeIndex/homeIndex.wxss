/* pages/homeIndex/homeIndex.wxss */
@import '../template/tabbar.wxss';

.layout {
  padding-top: 180rpx;
}

#myMap {
  width: 100%;
  height: 940rpx;
}

.Top {
  width: 100%;
  height: 190rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 999;
  border-bottom: 1px solid #f8f8f8;
}

.topS {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

.topS .imgTxt {
  font-size: 26rpx;
  color: #e15f34;
}

.position {
  width: 570rpx;
  height: 82rpx;
  display: flex;
  align-items: center;
}

.position .address {
  font-size: 38rpx;
  font-weight: 600;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  margin-left: 6rpx;
}

.position .icon image {
  width: 38rpx;
  height: 40rpx;
  display: block;
  padding-bottom: 5rpx;
  color: #ccc;
}

.position .icons image {
  width: 35rpx;
  height: 30rpx;
  display: block;
  padding-left: 10rpx;
  padding-top: 6rpx;
}

.scroll {
  width: 720rpx;
  height: 90rpx;
  white-space: nowrap;
  overflow: hidden;
  margin-left: 30rpx;
}

.scroll .list {
  width: 128rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 6rpx;
  background: #fafafa;
  display: inline-block;
  margin-right: 20rpx;
}

.list_plate {
  width: 130rpx;
  height: 92rpx;
  color: #919191;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.txt {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  display: inline-block;
  padding-top: 4rpx;
}

.list_plate image {
  width: 45rpx;
  height: 45rpx;
}

.style {
  color: #fff;
}

.bgColor {
  background: #e15f34 !important;
}

.main {
  display: none;
}

.main.active {
  display: block;
}

.main .mainList .swiper {
  width: 660rpx;
  height: 364rpx;
  border-radius: 10rpx;
  margin: 30rpx auto 0;
  position: relative;
}

.main .mainList .swiper .popularity {
  position: absolute;
  top: -20rpx;
  right: 100rpx;
  color: #fff;
  background: red;
  width: 104rpx;
  height: 86rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
}

.main .mainList .swiper .consume {
  position: absolute;
  top: -20rpx;
  right: -10rpx;
  color: #fff;
  background: #2b2e2f;
  width: 104rpx;
  height: 86rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
}

.main .mainList .swiper swiper {
  height: 100%;
}

.main .mainList .swiper swiper image {
  width: 660rpx;
  height: 100%;
  border-radius: 10rpx;
}

.mainList {
  margin-bottom: 20rpx;
}

.mainList .content {
  width: 696rpx;
  padding-left: 30rpx;
}

.mainList .content .toponymy {
  margin-top: 35rpx;
  font-size: 38rpx;
}

.mainList .content .txts {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #767676;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}

.mainList .content .address {
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #767676;
}

.boder {
  width: 696rpx;
  height: 1px;
  margin: 26rpx auto 0;
  background: #f8f8f8;
}

.locationHide {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #e15f34;
  margin: 360rpx auto 0;
  border-radius: 10rpx;
}

.window {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999999999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.bg {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}

.box {
  position: absolute;
  z-index: 10001;
  top: 300rpx;
  left: 0;
  right: 0;
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background: white;
  box-shadow: 0px 0px 6px 0px #ccc;
}

.bottom-pos {
  transform: translateY(0%);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.window .logo {
  width:498rpx;
  height: 100rpx;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
  border-bottom-right-radius:30%;
  border-bottom-left-radius: 30%;
  background: #ee6a50;
  border:1px solid transparent;
}

.window .logo image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: block;
  margin:40rpx auto 0;
  border:10rpx solid white;
}

.window .title {
  margin-top:75rpx;
  text-align: center;
}

button::after {
  border: none;
}

.window .btnss .button {
  width: 300rpx;
  height: 60rpx;
  background: linear-gradient(to right, #ee6a50, #e15f34,#ee6a50);
  margin: 200rpx auto 0;
  font-size: 30rpx;
  line-height: 60rpx;
  color: white;
  border-top-right-radius: 160rpx;
  border-top-left-radius: 160rpx;
  border-bottom-right-radius: 160rpx;
  border-bottom-left-radius: 160rpx;
  box-sizing:content-box;
  
}
