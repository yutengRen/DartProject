/* pages/homeIndex/homeIndex.wxss */
@import '../template/tabbar.wxss';

.layout {
  padding-top:190rpx;
}

.Top {
  width: 100%;
  height: 188rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 999;
}

.position {
  height: 82rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.position .address {
  font-size: 38rpx;
  font-weight: 600;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  margin-left: 6rpx;
}

.position .icon image {
  width: 38rpx;
  height: 40rpx;
  display: block;
  padding-bottom: 5rpx;color: #ccc;
}

.position .icons image {
  width: 35rpx;
  height: 30rpx;
  display: block;
  padding-left: 10rpx;
  padding-top: 6rpx;
}

.scroll {
  width: 720rpx;
  height: 90rpx;
  white-space: nowrap;
  overflow: hidden;
  margin-left: 30rpx;
}

.scroll .list {
  width: 128rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 6rpx;
  background: #fafafa;
  display: inline-block;
  margin-right: 20rpx;
}

.list_plate {
  width: 130rpx;
  height: 92rpx;
  color: #919191;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.txt {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  display: inline-block;
  padding-top:4rpx;
}

.list_plate image {
  width: 45rpx;
  height: 45rpx;
}

.style {
  color: #fff;
}

.bgColor {
  background: #e15f34 !important;
}

.main .mainList .swiper {
  width: 652rpx;
  height: 364rpx;
  border-radius: 10rpx;
  margin: 30rpx auto 0;
  position: relative;
}

.main .mainList .swiper .popularity {
  position: absolute;
  top: -20rpx;
  right: 100rpx;
  color: #fff;
  background: red;
  width: 104rpx;
  height: 86rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
}

.main .mainList .swiper .consume {
  position: absolute;
  top: -20rpx;
  right: -10rpx;
  color: #fff;
  background: #2b2e2f;
  width: 104rpx;
  height: 86rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
}

.main .mainList .swiper swiper {
  height: 100%;
}

.main .mainList .swiper swiper image {
  width: 650rpx;
  height: 100%;
  border-radius: 10rpx;
}

.mainList {
  margin-bottom:20rpx;
}

.mainList .content {
  width: 696rpx;
  padding-left: 30rpx;
}

.mainList .content .toponymy {
  font-size: 38rpx;
}

.mainList .content .txts {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #767676;
}

.mainList .content .address {
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #767676;
}

.boder {
  width: 696rpx;
  height: 1px;
  margin: 26rpx auto 0;
  background: #f8f8f8;
}

.locationHide{
  width:200rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align:center;
  color:#fff;
  background:#e15f34;
  margin:360rpx auto 0;
  border-radius:10rpx;
}
