/* pages/refund/refund.wxss */
.container .topText{
  color:#fff;
  text-align: center;
  margin:150rpx 0 40rpx;
  font-size:30rpx;
}

.container .box{
  width:300rpx;
  height:120rpx;
  margin:0 auto;
  background:#1864ff;
  display:flex;
  flex-direction: column;
  border-radius:4px;
  align-items: center;
  justify-content: space-around;
}

.container .box .cause{
  width:80rpx;
  height:40rpx;
  text-align:center;
  border-radius:3px;
  line-height:40rpx;
  background:rgba(255,255,255,.3);
}

.container .btna{
  width: 670rpx;
  height: 96rpx;
  line-height: 96rpx;
  border:1px solid #1966ff;
  color: #fff;
  border-top-left-radius: 40px;
  border-top-right-radius: 40px;
  border-bottom-left-radius: 40px;
  border-bottom-right-radius: 40px;
  font-size: 30rpx;
  text-align:center;
  margin:300rpx auto 0px;
  box-shadow: 0px 0px 3px 0px #1966ff;
}

.container .btn{
  width: 670rpx;
  height: 96rpx;
  line-height: 96rpx;
  border:1px solid #1966ff;
  color: #fff;
  border-top-left-radius: 40px;
  border-top-right-radius: 40px;
  border-bottom-left-radius: 40px;
  border-bottom-right-radius: 40px;
  font-size: 30rpx;
  text-align:center;
  margin:300rpx auto 0px;
  box-shadow: 0px 0px 3px 0px #1966ff;
}

.active{
  background:rgba(25,102,255,1);
}