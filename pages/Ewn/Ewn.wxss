/* pages/Ewn/Ewn.wxss */

page {
  padding-top: 100rpx;
}

.bgc {
  width: 100%;
  height: 100%;
  background: #1b3861;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -999;
}

.Box {
  width: 688rpx;
  height: 633rpx;
  border-radius: 10rpx;
  margin: 0rpx auto;
  position: relative;
  background: #fff;
  border: 1px solid transparent;
}

.head {
  width: 122rpx;
  height: 122rpx;
  position: absolute;
  left: 50%;
  top: -76rpx;
  margin-left: -61rpx;
}

.head image {
  width: 100%;
  height: 100%;
  display: block;
  border: 10rpx solid #1b3861;
  border-radius: 50%;
}

.code {
  width: 322rpx;
  height: 322rpx;
  margin: 120rpx auto 0;
  border: 34rpx solid #fff;
}

.code image {
  width: 100%;
  height: 100%;
  display: block;
}

.txt {
  width: 274rpx;
  margin: 36rpx auto 0;
  font-size: 24rpx;
}
