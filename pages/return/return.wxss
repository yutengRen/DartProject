/* pages/return/return.wxss */

.container {
  padding: 0 30rpx;
}

.container .swiper {
  width: 688rpx;
  height: 334rpx;
  margin: 100rpx 0 50rpx;
  border-radius: 4px;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.container .text{
  color:blue;
}

.container .text text{
  color:red;
}

.container .btn{
  width: 670rpx;
  height: 96rpx;
  line-height: 96rpx;
  border:1px solid #1966ff;
  color: #fff;
  border-top-left-radius: 40px;
  border-top-right-radius: 40px;
  border-bottom-left-radius: 40px;
  border-bottom-right-radius: 40px;
  font-size: 30rpx;
  text-align:center;
  margin:300rpx auto 0;
  box-shadow: 0px 0px 3px 0px #1966ff;
}

.active{
  background:#1966ff;
}
