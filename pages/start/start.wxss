/* pages/start/start.wxss */

page {
  background: #000;
  color: #fff;
  padding-bottom: 92rpx;
}

.container .list:first-child {
  margin: 0 auto;
}

.container .list {
  height: 180rpx;
  margin: 20rpx auto 0;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #1966ff;
  box-shadow: 0px -6px 6px -6px #1966ff;
  padding: 10rpx 0;
  background: rgba(0, 0, 0, 0.4);
}

.container .list .left {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 40rpx;
  margin-left: 40rpx;
}

.container .list .right {
  width: 100rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .gamesFixed {
  height: 100rpx;
  background: #000;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.container .gamesFixed .start {
  float: right;
  width: 160rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  background: #1966ff;
  font-size: 30rpx;
}

.container .gamesFixed .del .icon{
  width:35rpx;
  height:35rpx;
}

.container .gamesFixed .del .icon image{
  width:100%;
  height:100%;
  display:block;
}

.container .gamesFixed .refresh .icon{
  width:35rpx;
  height:35rpx;
}

.container .gamesFixed .refresh .icon image{
  width:100%;
  height:100%;
  display:block;
}


.container .gamesFixed .del {
  width: 120rpx;
  height:100rpx;
  text-align: center;
  display:flex;
  flex-direction: column;
  align-items: center;
  background: #f69729;
  margin-right: 6rpx;
  font-size: 30rpx;
  justify-content:center;
}

.container .gamesFixed .refresh{
    width: 120rpx;
  height:100rpx;
  text-align: center;
  display:flex;
  flex-direction: column;
  align-items: center;
  background: #f69729;
  margin-right: 6rpx;
  font-size: 30rpx;
  justify-content:center;
}

checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 背景的宽 */
  height: 40rpx; /* 背景的高 */
  background: #000;
  border: 1px solid #1966ff;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 背景的宽 */
  height: 40rpx; /* 背景的高 *//* border: none; *//* color: #fff; */
  background: #1966ff;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
