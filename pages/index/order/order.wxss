/* pages/index/order/order.wxss */
.bgc {
  width: 100%;
  height: 100%;
  background: #eee;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -999;
}

.main {
  padding:50rpx 0;
  width:640rpx;
  margin: 50rpx auto 0;
  border-radius:10rpx;
  text-align: center;
  background:white;
  box-shadow: 0px 0px 20px 0px #ccc;
}

.main .time{
 font-size:26rpx;
}

.price {
  padding: 10rpx 0;
  font-size: 50rpx;
  font-weight: 600;
}

.selectPay {
  margin: 50rpx auto 0;
}

.selectPay .txt{
  padding-left:30rpx;
  margin-bottom:20rpx;
}

.selectPay .boxs {
  height: 80rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
  border-bottom: 1px solid #eaeaea;
  padding:0 50rpx;
}

.selectPay .boxs .list {
  display: flex;
  align-items: center;
}

.selectPay .boxs image {
  width: 50rpx;
  height: 50rpx;
  padding-right: 10rpx;
}

.box view {
  border-radius: 6rpx;
  padding: 10rpx 15rpx;
}

.box .cancel {
  color: #4a4a4a;
  background: rgba(238, 238, 238, 0.9);
}

.box .affirm {
  background:#00EE76;
  color: white;
}

checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 37rpx; /* 背景的宽 */
  height:37rpx; /* 背景的高 */
  border: 1px solid #00EE76;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-radius: 50%; /* 圆角 */
  width: 37rpx; /* 背景的宽 */
  height: 37rpx; /* 背景的高 *//* border: none; *//* color: #fff; */
  background: #00EE76;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 37rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 37rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 37rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.Box{
  width:100%;
  position:fixed;
  left:0;
  bottom:0;
  height:90rpx;
  background:white;
}

.Box .cancel{
  width:50%;
  height:90rpx;
  float: left;
  line-height: 90rpx;
  text-align:center;
  color:#333;
}

.Box .pay{
  width:50%;
  height:90rpx;
  float: right;
  line-height: 90rpx;
  background:#ff5a23;
  text-align:center;
  color:white;
}
