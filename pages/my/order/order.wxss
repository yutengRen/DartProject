/* pages/my/order/order.wxss */

.bgc {
  width: 100%;
  height: 100%;
  background: #eee;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -999;
}

.main {
  background: white;
  margin-top: 20rpx;
}

.first_plate {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 26rpx;
  border-bottom: 1px dotted #f4f5f8;
}

.first_plate .state {
  color: #999;
  background: rgba(238, 238, 238, 0.5);
  padding: 4rpx 20rpx;
  border-top-right-radius: 160rpx;
  border-top-left-radius: 160rpx;
  border-bottom-right-radius: 160rpx;
  border-bottom-left-radius: 160rpx;
}

.second_plate {
  padding: 30rpx 26rpx;
}

.second_plate .txt {
  color: #a5a5a5;
  font-size: 24rpx;
  padding-top: 20rpx;
}

.second_plate .date {
  color: #a5a5a5;
  font-size: 24rpx;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.remind {
  padding-top:20rpx;
  align-items: center;
  color: #ff5a23;
  font-size:24rpx;
}

.remind image {
  width: 26rpx;
  height: 26rpx;
  padding-right:5rpx;
  margin-bottom:7rpx;
  vertical-align:middle;
}
