/* pages/history/history.wxss */
page {
  background: #000;
  color: #fff;
  padding-bottom: 30rpx;
}

.container .list:first-child {
  margin: 0 auto;
}

.container .list {
  margin: 20rpx auto 0;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #1966ff;
  box-shadow: 0px -6px 6px -6px #1966ff;
  background: rgba(0, 0, 0, 0.4);
  padding:20rpx 0;
}

.container .list .left {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 40rpx;
  margin-left: 40rpx;
}
